<h3>NEW STOCK</h3>

<form action="/stock" method="post">
  Name:
  <input type="text" name="name" required></input><br>
  Distillery:
  <select name="distillery_id">
    <% for distillery in Distillery.all %>
    <option value="<%=distillery.id%>"><%=distillery.name%></option>
    <% end %>
  </select><br>
  Style:
  <select name="style">
    <option value="light">Light</option>
    <option value="rich">Rich</option>
    <option value="smoky">Smoky</option>
    <option value="fruity">Fruity</option>
  </select>
  <br>
  Quantity:
  <input type="text" name="quantity" required></input><br>
  Minimum holding stock:
  <input type="text" name="low_level" required></input><br>
  Supplier:
  <select name="supplier_id">
    <% for supplier in Supplier.all %>
    <option value="<%=supplier.id%>"><%=supplier.name%></option>
    <% end %>
  </select><br>
  Cost (per bottle):
  <input type="text" name="cost_price" required></input><br>
  Selling Price (per bottle):
  <input type="text" name="sale_price" required></input>
  <br>
  <input type="submit" value="Create">

</form>
